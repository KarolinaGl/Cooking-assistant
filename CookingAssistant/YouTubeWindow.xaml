<Window x:Class="CookingAssistant.YouTubeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CookingAssistant"
        mc:Ignorable="d"
        Title="YouTubeWindow">
    <Grid>
        <ListView Margin="10" Name="displayVideoList" HorizontalContentAlignment="Stretch" ScrollViewer.CanContentScroll="False">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <UniformGrid MaxWidth="400">
                        <Image Source="{Binding Thumbnail.Url}" Margin="10" Height="150" Width="200"/>
                        <TextBlock Text="{Binding Title}" VerticalAlignment="Center" TextWrapping="WrapWithOverflow" HorizontalAlignment="Left"></TextBlock>
                        <Button Name="firstButton" Content="Open in Browser" Click="OpenBrowser_Click" Tag="{Binding Id}" Height="100" Width="150"/>
                        <Button Name="secondButton" Content="Save" Click="Save_Click" Tag="{Binding Id}" Height="100" Width="150"/>
                    </UniformGrid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>
