<Window x:Class="CookingAssistant.RecipeCRUDWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CookingAssistant"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        Title="RecipeCRUDWindow" Height="697" Width="1244" Closing="RecipeCRUDWindow_Closing" ResizeMode="NoResize">
    <Grid>
        <DataGrid x:Name="ingredientsDataGrid" HorizontalAlignment="Left" Height="172" Margin="634,35,0,0" VerticalAlignment="Top" Width="432" AreRowDetailsFrozen="True" GridLinesVisibility="None" HeadersVisibility="None" SelectionChanged="ingredientsDataGrid_SelectionChanged" AutoGeneratingColumn="ingredientsDataGrid_AutoGeneratingColumn"/>
        <Label x:Name="recipeNameLabel" Content="Label" HorizontalAlignment="Left" Margin="635,4,0,0" VerticalAlignment="Top"/>
        <Label x:Name="preparationTimeLabel" Content="Label" HorizontalAlignment="Left" Margin="851,4,0,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="descriptionTextBlock" HorizontalAlignment="Left" Margin="635,212,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="591" Height="439"/>
        <Label Content="Choose your recipe:" HorizontalAlignment="Left" Margin="10,262,0,0" VerticalAlignment="Top"/>
        <DataGrid x:Name="recipesDataGrid" HorizontalAlignment="Left" Height="107" Margin="10,290,0,0" VerticalAlignment="Top" Width="150" AreRowDetailsFrozen="True" GridLinesVisibility="None" HeadersVisibility="None" SelectionChanged="RecipesDataGrid_SelectionChanged" AutoGeneratingColumn="RecipesDataGrid_AutoGeneratingColumn" IsReadOnly="True"/>
        <Label Content="Add a new recipe:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Recipe name:" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.481,1.731"/>
        <Label Content="Preparation time in minutes:" HorizontalAlignment="Left" Margin="10,72,0,0" VerticalAlignment="Top"/>
        <Label Content="Description:" HorizontalAlignment="Left" Margin="10,103,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="addRecipeNameTextBox" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="185,47,0,0" />
        <TextBox x:Name="addPreparationTimeTextBox" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="185,75,0,0"/>
        <TextBox x:Name="addDescriptionTextBox" HorizontalAlignment="Left" Height="134" TextWrapping="Wrap" VerticalAlignment="Top" Width="430" Margin="185,108,0,0" RenderTransformOrigin="0.5,0.5">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="0.46"/>
                    <RotateTransform/>
                    <TranslateTransform X="0.538"/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <Button x:Name="addRecipeButton" Content="Add recipe" HorizontalAlignment="Left" Margin="425,247,0,0" VerticalAlignment="Top" Width="190" Click="AddRecipeButton_Click"/>
        <Label Content="Add a new ingredient to your chosen recipe:&#xD;&#xA;" HorizontalAlignment="Left" Margin="10,402,0,0" VerticalAlignment="Top" Width="260" Height="28"/>
        <Label Content="Product name:" HorizontalAlignment="Left" Margin="16,561,0,0" VerticalAlignment="Top" RenderTransformOrigin="2.026,-3.962"/>
        <TextBox x:Name="addIngredientTextBox" HorizontalAlignment="Left" Height="23" Margin="140,565,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="addIngredientButton" Content="Add ingredient" HorizontalAlignment="Left" Margin="140,605,0,0" VerticalAlignment="Top" Width="120" Click="AddIngredientButton_Click"/>
        <RadioButton x:Name="volumeRadioButton" GroupName="addIngredient" Content="volume" HorizontalAlignment="Left" Margin="18,465,0,0" VerticalAlignment="Top" Checked="VolumeRadioButton_Checked"/>
        <RadioButton x:Name="massRadioButton" GroupName="addIngredient" Content="mass" HorizontalAlignment="Left" Margin="18,500,0,0" VerticalAlignment="Top" Checked="MassRadioButton_Checked"/>
        <RadioButton x:Name="quantityRadioButton" GroupName="addIngredient" Content="quantity" HorizontalAlignment="Left" Margin="18,535,0,0" VerticalAlignment="Top" Checked="QuantityRadioButton_Checked"/>
        <ComboBox x:Name="measurementComboBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="140,500,0,0" SelectionChanged="MeasurementComboBox_SelectionChanged" />
        <Label Content="Amount:" HorizontalAlignment="Left" Margin="16,431,0,0" VerticalAlignment="Top" RenderTransformOrigin="2.026,-3.962"/>
        <TextBox x:Name="amountTextBox" HorizontalAlignment="Left" Height="23" Margin="140,435,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="deleteRecipeButton" Content="Delete recipe" HorizontalAlignment="Left" Margin="425,377,0,0" VerticalAlignment="Top" Width="190" Click="deleteRecipeButton_Click"/>
        <Button x:Name="deleteIngredientButton" Content="Delete ingredient" HorizontalAlignment="Left" Margin="320,605,0,0" VerticalAlignment="Top" Width="120" Click="deleteIngredientButton_Click"/>

    </Grid>
</Window>
