<Window x:Class="CookingAssistant.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CookingAssistant"
        mc:Ignorable="d"
        Title="Cooking Assistant"
        Width="1920"
        Height="1080"
        ResizeMode="NoResize"
        SizeToContent="Manual"
        WindowState="Maximized"
        WindowStyle="SingleBorderWindow">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <DataGrid Grid.Column="0"  x:Name="recipesGrid" IsReadOnly="True" SelectionMode="Single" SelectionUnit="Cell" CurrentCellChanged="recipesGrid_CurrentCellChanged" AreRowDetailsFrozen="True" GridLinesVisibility="None" HeadersVisibility="None"></DataGrid>
        <Frame Grid.Column="1" Name="recipesFrame" NavigationUIVisibility="Hidden" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
        <Frame Grid.Column="2" Name="rightFrame" NavigationUIVisibility="Hidden">
        </Frame>
        <Button Name="savedVideosButton" Content="Saved video" Grid.Column="1" HorizontalAlignment="Left" Margin="208,799,0,0" VerticalAlignment="Top" Width="201" Height="47" Click="SavedVideosButton_Click"/>
        <Button Name="recommendedVideosButton" Content="Recommended videos" Grid.Column="1" HorizontalAlignment="Left" Margin="208,851,0,0" VerticalAlignment="Top" Width="201" Height="46" Click="RecommendedVideosButton_Click"/>
        <Button Name="timerButton" Content="Timer" Grid.Column="1" HorizontalAlignment="Left" Margin="208,902,0,0" VerticalAlignment="Top" Width="201" Height="46" Click="TimerButton_Click"/>
    </Grid>
</Window>
