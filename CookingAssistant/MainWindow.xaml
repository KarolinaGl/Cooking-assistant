<Window x:Class="CookingAssistant.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CookingAssistant"
        mc:Ignorable="d"
        Title="Cooking Assistant"
        Width="1920"
        Height="1080"
        ResizeMode="NoResize"
        SizeToContent="Manual"
        WindowState="Maximized"
        WindowStyle="SingleBorderWindow">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <DockPanel Grid.Column="0" VerticalAlignment="Stretch">
            <Label Content="Recipes:" DockPanel.Dock="Top"/>
            <DataGrid Name="recipesDataGrid" DockPanel.Dock="Top" IsReadOnly="True" SelectionMode="Single" SelectionUnit="Cell" CurrentCellChanged="recipesGrid_CurrentCellChanged" AreRowDetailsFrozen="True" GridLinesVisibility="None" HeadersVisibility="None" SourceUpdated="recipesDataGrid_SourceUpdated"/>
            <Label Content="Shopping List:" DockPanel.Dock="Top"/>
            <DataGrid Name="shoppingListDataGrid" DockPanel.Dock="Top" IsReadOnly="True" SelectionMode="Single" SelectionUnit="Cell" AreRowDetailsFrozen="True" GridLinesVisibility="None" HeadersVisibility="None"/>
            <Label Content="Supplies:" DockPanel.Dock="Top" />
            <DataGrid Name="suppliesDataGrid" DockPanel.Dock="Top" IsReadOnly="True" SelectionMode="Single" SelectionUnit="Cell" AreRowDetailsFrozen="True" GridLinesVisibility="None" HeadersVisibility="None"/>
        </DockPanel>
        <StackPanel Grid.Column="1">
            <Frame Name="recipesFrame" NavigationUIVisibility="Hidden" HorizontalAlignment="Center" VerticalAlignment="Center" />
            <Label Content="Missing ingredients:"/>
            <DataGrid Name="missingItemsDataGrid" HorizontalAlignment="Center" VerticalAlignment="Center" IsReadOnly="True" SelectionMode="Single" SelectionUnit="FullRow" AreRowDetailsFrozen="True" GridLinesVisibility="None" HeadersVisibility="None"/>
            <Button Name="recommendedVideosButton" Content="Recommended videos" Width="201" Height="46" Click="RecommendedVideosButton_Click"/>
            <Button Name="timerButton" Content="Timer" Width="201" Height="46" Click="TimerButton_Click"/>
            <Button Name="savedVideosButton" Content="Saved video" Width="201" Height="46" Click="SavedVideosButton_Click"/>
            <Button Name="shoppingListButton" Content="Edit Shopping List" Width="201" Height="46" Click="ShoppingListButton_Click"/>
            <Button Name="recipeCRUDWindowButton" Content="Manage Recipes" Width="201" Height="46" Click="RecipeCRUDWindowButton_Click"/>
        </StackPanel>
        <Frame Grid.Column="2" Name="rightFrame" NavigationUIVisibility="Hidden"/>
