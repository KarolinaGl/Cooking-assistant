<Window x:Class="CookingAssistant.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CookingAssistant"
        mc:Ignorable="d"
        Title="Cooking Assistant"
        Width="1280"
        Height="720"
        MinWidth="1280"
        MinHeight="720"
        ResizeMode="CanResize"
        SizeToContent="Manual"
        WindowStyle="SingleBorderWindow">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <DockPanel Grid.Column="0" VerticalAlignment="Stretch" Margin="10">
            <Label Content="Recipes:" HorizontalAlignment="Center" DockPanel.Dock="Top"/>
            <DataGrid Name="recipesDataGrid" ColumnWidth="*" DockPanel.Dock="Top" IsReadOnly="True" SelectionMode="Single" SelectionUnit="Cell" CurrentCellChanged="recipesGrid_CurrentCellChanged" AreRowDetailsFrozen="True" GridLinesVisibility="None" HeadersVisibility="None" SourceUpdated="recipesDataGrid_SourceUpdated"/>
            <Button Name="recipeCRUDWindowButton" Margin="0,10,0,10" Content="Manage Recipes" DockPanel.Dock="Top" Width="Auto" Height="30" Click="RecipeCRUDWindowButton_Click"/>
            <Label Content="Shopping List:" HorizontalAlignment="Center" DockPanel.Dock="Top"/>
            <DataGrid Name="shoppingListDataGrid" ColumnWidth="*" DockPanel.Dock="Top" IsReadOnly="True" SelectionMode="Single" SelectionUnit="FullRow" AreRowDetailsFrozen="True" GridLinesVisibility="None" HeadersVisibility="None"/>
            <Button Name="shoppingListButton" Margin="0,10,0,10" Content="Edit Shopping List" DockPanel.Dock="Top" Width="Auto" Height="30" Click="ShoppingListButton_Click"/>
            <Label Content="Supplies:" HorizontalAlignment="Center" DockPanel.Dock="Top" />
            <DataGrid Name="suppliesDataGrid" ColumnWidth="*" DockPanel.Dock="Top" IsReadOnly="True" SelectionMode="Single" SelectionUnit="FullRow" AreRowDetailsFrozen="True" GridLinesVisibility="None" HeadersVisibility="None"/>
            <Button Name="suppliesButton" Margin="0,10,0,10" Content="Manage Supplies" DockPanel.Dock="Top" Width="Auto" Height="30" Click="SuppliesButton_Click"/>
        </DockPanel>
        <DockPanel Grid.Column="1" Margin="10">
            <Frame Name="recipesFrame" DockPanel.Dock="Top" NavigationUIVisibility="Hidden" />
            <Label Content="Missing ingredients:" DockPanel.Dock="Top" />
            <DataGrid Name="missingItemsDataGrid" DockPanel.Dock="Top" HorizontalAlignment="Center" VerticalAlignment="Center" IsReadOnly="True" SelectionMode="Single" SelectionUnit="FullRow" AreRowDetailsFrozen="True" GridLinesVisibility="None" HeadersVisibility="None"/>
            <Button Name="recommendedVideosButton" DockPanel.Dock="Top" Content="Recommended videos" Width="201" Height="46" Click="RecommendedVideosButton_Click"/>
            <Button Name="timerButton" Content="Timer" DockPanel.Dock="Top" Width="201" Height="46" Click="TimerButton_Click"/>
            <Button Name="savedVideosButton" Content="Saved video" DockPanel.Dock="Top" Width="201" Height="46" Click="SavedVideosButton_Click"/>
        </DockPanel>
        <Frame Grid.Column="2" Name="rightFrame" NavigationUIVisibility="Hidden" Margin="10"/>
