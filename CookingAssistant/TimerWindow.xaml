<Window x:Class="CookingAssistant.TimerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CookingAssistant"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Timer" Height="250" Width="450">
    <Grid>
        <TextBox></TextBox>
        <ScrollBar Name="timerScrollBar"  HorizontalAlignment="Left" Margin="261,56,0,0" VerticalAlignment="Top" MouseLeftButtonUp="TimerScrollbarUp" MouseLeftButtonDown="TimerScrollbarDown"/>
        <TextBox Name="timerText" HorizontalAlignment="Left" Height="32" Margin="183,56,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="73" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" IsReadOnly="True"/>
        <ProgressBar Name="timerProgressBar" Height="18" Margin="63,102,61,0" VerticalAlignment="Top"/>
        <Button Name="timerStartButton" Margin="63,139,259,30" Click="timerStartButton_Click">Start</Button>
        <Button Name="timerStopButton" Margin="261,139,61,30" Click="timerStopButton_Click">Stop</Button>
    </Grid>
</Window>
