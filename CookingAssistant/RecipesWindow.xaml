<Window x:Class="CookingAssistant.RecipesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CookingAssistant"
        mc:Ignorable="d"
        Title="RecipesWindow" Height="Auto" Width="Auto">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="recipesDataGrid" HorizontalAlignment="Left" Height="Auto" Margin="11,38,0,0" VerticalAlignment="Top" Width="Auto" Grid.ColumnSpan="2" AreRowDetailsFrozen="True" GridLinesVisibility="None" HeadersVisibility="None"/>
        <Label x:Name="recipeNameLabel" Content="Label" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Label x:Name="preparationTimeLabel" Content="Label" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <TextBlock ScrollViewer.VerticalScrollBarVisibility="Auto" x:Name="descriptionTextBlock" HorizontalAlignment="Left" Margin="11,242,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="Auto" Height="167" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
