<Window x:Class="CookingAssistant.YouTubeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CookingAssistant"
        mc:Ignorable="d"
        Title="YouTubeWindow" Height="720" Width="1280">
    <Grid>
        <ListView Margin="10" Name="displayVideoList" HorizontalContentAlignment="Stretch" ScrollViewer.CanContentScroll="False"
>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <UniformGrid>
                        <Image Source="{Binding Thumbnail.Url}" Height="200" Width="300">
                        </Image>
                        <TextBlock Text="{Binding Title}" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
                        <Button  Click="OpenBrowser_Click" Tag="{Binding Id}" Height="100" Width="150">
                            Open in Browser
                        </Button>
                        <Button Click="Favourites_Click" Tag="{Binding Id}" Height="100" Width="150">
                            Add to Favourites
                        </Button>
                    </UniformGrid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </Grid>
</Window>
